---
import Layout from '../../../layouts/Layout.astro';
import { portfolioData } from '../../../data/portfolio-data';

export function getStaticPaths() {
    return portfolioData.portfolio.items.map((item) => ({
        params: { slug: item.slug },
        props: { item }
    }));
}

type PortfolioItem = typeof portfolioData.portfolio.items[0];
const { item } = Astro.props as { item: PortfolioItem };
---

<Layout title={`${item.title} | Diego Rios`}>
    <main class="py-24 lg:py-28 px-6 lg:px-20 bg-surface dark:bg-surface-dark overflow-hidden min-h-screen text-content dark:text-content-dark transition-colors duration-300">
        <div class="max-w-screen-xl mx-auto">
            <!-- Header -->
            <header class="mb-10 flex items-center justify-between">
                <div>
                    <h1 class="text-2xl lg:text-4xl font-bold uppercase tracking-tight">
                        {item.title}
                    </h1>
                    {item.categories && item.categories.length > 0 && (
                        <p class="text-sm text-content-muted dark:text-content-dark-muted mt-2">
                            {item.categories.join(' / ')}
                        </p>
                    )}
                </div>
                <a 
                    href="/portfolio" 
                    class="font-semibold text-sm hover:text-content-muted dark:hover:text-content-dark-muted transition-colors flex items-center gap-2"
                >
                    <span>←</span>
                    <span>ATRÁS</span>
                </a>
            </header>

            <!-- Cover Image -->
            {item.cover_image && item.cover_image.src && (
                <section class="mb-10">
                    <div class="w-full aspect-[16/10] overflow-hidden rounded-lg bg-surface-alt dark:bg-surface-dark-alt">
                        <img
                            src={item.cover_image.src}
                            alt={item.cover_image.alt}
                            width={item.cover_image.width}
                            height={item.cover_image.height}
                            class="w-full h-full object-cover"
                        />
                    </div>
                </section>
            )}

            <!-- Placeholder if no images -->
            {(!item.cover_image?.src) && (
                <section class="mb-10">
                    <div 
                        class="w-full aspect-[16/10] overflow-hidden rounded-lg flex items-center justify-center"
                        style={`background-color: ${item.theme || '#6366F1'}`}
                    >
                        <span class="text-white text-2xl font-bold">{item.title}</span>
                    </div>
                </section>
            )}

            <!-- Description -->
            <section class="max-w-3xl">
                <h2 class="text-lg font-semibold uppercase tracking-wide mb-4 text-content dark:text-content-dark">
                    Descripción
                </h2>
                {item.description?.nodes?.map((node) => {
                    if (node.type === 'paragraph') {
                        return (
                            <p class="text-content-muted dark:text-content-dark-muted leading-relaxed text-lg mb-4">
                                {node.content?.map((content) => content.value).join('')}
                            </p>
                        );
                    }
                    return null;
                })}
            </section>

            <!-- Back Button -->
            <div class="mt-12">
                <a 
                    href="/portfolio"
                    class="inline-flex items-center gap-2 px-6 py-3 bg-content dark:bg-content-dark text-surface dark:text-surface-dark font-semibold rounded-full hover:opacity-90 transition-opacity"
                >
                    <span>←</span>
                    <span>Ver todos los proyectos</span>
                </a>
            </div>
        </div>
    </main>
</Layout>

