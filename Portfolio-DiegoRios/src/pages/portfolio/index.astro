---
import Layout from '../../layouts/Layout.astro';
import PortfolioHero from '../../components/portfolio-page/Hero';
import ProjectsGrid from '../../components/portfolio-page/ProjectsGrid';
import { portfolioData } from '../../data/portfolio-data';

const portfolioPageData = portfolioData.portfolio;
---

<Layout title="Portfolio - Diego Ríos | Proyectos Web">
    
    <PortfolioHero
        title="Proyectos destacados"
        subtitle="Casos reales con resultados medibles. Cada proyecto representa un desafío técnico resuelto."
        backgroundImage="/imgFondo1.png"
        client:load
    />
    
    <ProjectsGrid
        items={portfolioPageData.items}
        client:load
    />
</Layout>
